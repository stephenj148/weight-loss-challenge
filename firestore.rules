rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read/write their own user document
      allow read, write: if isOwner(userId);
      
      // Admins can read all user documents
      allow read: if isAdmin();
    }
    
    // Competitions collection
    match /competitions/{year} {
      // Anyone authenticated can read competition settings
      allow read: if request.auth != null;
      
      // Only admins can write competition settings
      allow write: if isAdmin();
      
      // Participants subcollection
      match /participants/{userId} {
        // Users can read/write their own participant data
        allow read, write: if isOwner(userId);
        
        // Admins can read all participant data
        allow read: if isAdmin();
        
        // Weigh-ins subcollection
        match /weigh-ins/{weekNumber} {
          // Users can read/write their own weigh-ins
          allow read, write: if isOwner(userId);
          
          // Admins can read/write all weigh-ins
          allow read, write: if isAdmin();
        }
      }
    }
  }
}
